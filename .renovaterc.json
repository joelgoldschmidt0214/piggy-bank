{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":prHourlyLimitNone",
    ":maintainLockFilesWeekly",
    ":disableRateLimiting"
  ],
  "osvVulnerabilityAlerts": true,
  "timezone": "Asia/Tokyo",
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "【制約】Node.js (Runtime & Docker) - v24系(LTS)に固定",
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "24.x"
    },
    {
      "description": "【制約】Python (Runtime & Docker) - v3.13系に固定",
      "matchPackageNames": [
        "python"
      ],
      "allowedVersions": "3.13.x"
    },
    {
      "description": "【制約】pnpm - v10系に固定",
      "matchPackageNames": [
        "pnpm"
      ],
      "allowedVersions": "10.x"
    },
    {
      "description": "【グループ】Next.js ecosystem",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "eslint-config-next"
      ],
      "groupName": "nextjs-ecosystem",
      "groupSlug": "nextjs"
    },
    {
      "description": "【グループ】Python dependencies - まとめてレビュー",
      "matchManagers": [
        "pep621",
        "pip_requirements"
      ],
      "groupName": "python-deps",
      "groupSlug": "python"
    },
    {
      "description": "【グループ】GitHub Actions - 自動マージ",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "groupSlug": "gha",
      "automerge": true
    },
    {
      "description": "【グループ】その他すべてのマイナー・パッチ更新 (Frontend/Docker/Terraform等)",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all-non-major",
      "groupSlug": "all-non-major",
      "automerge": false
    },
    {
      "description": "Major updates - 要手動レビュー",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major-update"
      ],
      "automerge": false
    }
  ]
}
